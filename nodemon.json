{
  "watch": [
    "app.js",
    ".env",
    "src/**/*",
    "views/**/*",
    "public/**/*",
    "scripts/**/*",
    "scripts-ps/**/*"
  ],
  "ext": "js,ejs,json,css,html,env",
  "ignore": [
    "node_modules/**/*",
    ".git",
    "*.test.js",
    "*.spec.js",
    "logs/*",
    "coverage/*",
    "dist/*",
    "build/*"
  ],
  "verbose": true,
  "env": {
    "NODE_ENV": "development"
  }
}